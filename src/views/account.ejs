<%- include('includes/header'); %>
  <header class="header--account">
    <%- include('includes/navbar'); %>
  </header>
  <section class="account">
    <div class="row account__painel">
      <div class="col-1">
        <div class="abas">
          <div class="abas__div">
            <button class="abas__aba actived">
              <i class="fa-solid fa-desktop"></i>
            </button>
            <button class="abas__aba">
              <i class="fa-solid fa-arrow-right-arrow-left"></i>
            </button>
            <button class="abas__aba">
              <i class="fa-solid fa-credit-card"></i>
            </button>
            <button class="abas__aba">
              <i class="fa-solid fa-file-lines"></i>
            </button>
            <button class="abas__aba">
              <i class="fa-solid fa-gear"></i>
            </button>
          </div>
        </div>
      </div>
      <div class="col-8"></div>
      <div class="col-3">
        <div class="current">
          <div class="current__money">
            <p>Dinheiro atual:</p>
            <h2>&pound;0.00</h2>
          </div>
          <div class="current__payment">
            <table>
              <tr>
                <th class="current__payment--text">Débito:</th>
                <th class="current__payment--num">&pound;0.00</th>
              </tr>
              <tr>
                <th class="current__payment--text">Crédito:</th>
                <th class="current__payment--num">&pound;0.00</th>
              </tr>
              <tr>
                <th class="current__payment--text">Investimentos:</th>
                <th class="current__payment--num">&pound;0.00</th>
              </tr>
            </table>
          </div>
          <button class="current__btn" type="button">Fazer deposito</button>
        </div>
      </div>
    </div>
  </section>
<%- include('includes/footer'); %>